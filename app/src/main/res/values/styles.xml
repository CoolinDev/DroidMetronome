<resources>
    <!-- Tema do app-->
    <style name="Metronome.Theme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

    </style>

    <!-- Tema do app na tela principal-->
    <style name="Metronome.Main.Theme" parent="Metronome.Theme">
        <item name="android:actionBarStyle">@style/ActionBar.Metronome.Style</item>
    </style>

    <!-- Tema da action bar-->
    <style name="ActionBar.Metronome.Style" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
    </style>


</resources>
