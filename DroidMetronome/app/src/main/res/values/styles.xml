<resources>
    <!-- Tema do app-->
    <style name="Metronome.Theme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/metronome_green</item>
        <item name="colorPrimaryDark">@color/metronome_dark_green</item>
        <item name="android:buttonStyleToggle">@style/Button.Play.Theme</item>
    </style>

    <!-- Tema do app na tela principal-->
    <style name="Metronome.Main.Theme" parent="Metronome.Theme">
        <item name="android:actionBarStyle">@style/ActionBar.Metronome.Style</item>
    </style>

    <!-- Tema da action bar-->
    <style name="ActionBar.Metronome.Style" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">

        <item name="displayOptions">useLogo|showHome</item>
        <item name="android:logo">@drawable/ic_launcher</item>
    </style>

    <!-- Tema do botÃ£o play-->
    <style name = "Button.Play.Theme" parent= "android:Widget">
        <item name = "android:background">@drawable/button_play_background</item>
        <item name = "android:disabledAlpha">?android:attr/disabledAlpha</item>

    </style>

</resources>
