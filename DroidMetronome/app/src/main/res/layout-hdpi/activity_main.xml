
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffff"
    tools:context=".activity_start_game"
    android:id="@+id/main">

    <LinearLayout
        android:id="@+id/tempo"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/textoTempo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <NumberPicker
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginRight="20dp" />

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:id="@+id/bpm"
            style="@style/Base.V21.Theme.AppCompat.Light"
            android:gravity="top"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/textoTempo"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timer"
            android:layout_marginRight="60dp"

            android:id="@+id/textoBpm" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BPM"
            android:layout_marginLeft="30dp"
            android:id="@+id/textoTimer" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/compasso"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_horizontal"
        android:clickable="false"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:id="@+id/qntBatidas"

            android:layout_marginRight="20dp"
            android:layout_gravity="bottom" />

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:id="@+id/valorBase"
            android:layout_marginLeft="20dp"
            android:layout_gravity="bottom" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compasso"
        android:gravity="center_horizontal"
        android:id="@+id/textCompasso"
        android:layout_above="@+id/compasso"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_action_play"
        android:background="@drawable/floating_button_design"
        android:id="@+id/floatingButtonPlay"
        android:onClick="executar"
        android:layout_alignTop="@+id/floatingButtonStop"
        android:layout_toLeftOf="@+id/textCompasso"
        android:layout_toStartOf="@+id/textCompasso" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_action_stop"
        android:background="@drawable/floating_button_design"
        android:id="@+id/floatingButtonStop"
        android:onClick="parar"
        android:layout_below="@+id/compasso"
        android:layout_toRightOf="@+id/textCompasso"
        android:layout_toEndOf="@+id/textCompasso"
        android:layout_marginTop="42dp" />


